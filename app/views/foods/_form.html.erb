<%= form_with model: @food, local: true do |form| %>
  <p>
    <%= form.label :name %>
    <%= form.text_field :name, required: true %>
  </p>
  <p><%= form.file_field :image %></p>
  <p>
    <%= form.label :comment %>
    <%= form.text_area :comment %>
  </p>
  <p><%= form.submit "送信" %></p>
<% end %>
